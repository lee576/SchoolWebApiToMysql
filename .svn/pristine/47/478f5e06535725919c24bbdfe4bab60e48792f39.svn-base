	function init() {
        schoolCode = GetQueryString('school_id');
        schooltype = GetQueryString('type');
        $("#entryForm").find('input[name="school_id"]').val(schoolCode);
        $("#entryForm").find('input[name="type"]').val(schooltype);
        if (schoolCode == "9999") {
            getName();
            getMoble();
            getId_no();
        }
        //判断是否是上传图片
        isShowImage();
        getParamData();
    }
    function isShowImage() {
        $.ajax({
            url: apiurl + 'api/SchoolCodr/GetCardImgUrl?school_id=' + schoolCode,
            dataType: 'json',
            type: 'get',
            success: function (res) {
                if (res.code == '10000') {
                    $(".cx-show-img").attr('src', res.url)
                }


            }, error: function (res) {
                console.log(res);
            }
        });
    } 
    function getParamData() {
        $.ajax({
            url: apiurl + 'api/SchoolCodr/GetCardWriteFile?school_id=' + schoolCode,
            dataType: 'json',
            type: 'get',
            success: function (res) {
                if (res.code == '10000') {
                    paramArr = res.data.split(',');
                    if (paramArr.indexOf('姓名') >= 0) {
                        $(".cx-name").show();
                    }
                    if (paramArr.indexOf('身份证号') >= 0) {
                        $(".cx-card").show();
                    }
                    if (paramArr.indexOf('手机号') >= 0) {
                        $(".cx-phone").show();
                    }
                    if (paramArr.indexOf('学号') >= 0) {
                        $(".cx-num").show();
                    }

                }


            }, error: function (res) {
                console.log(res);
            }
        });
    }
    function GetQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) return decodeURI(r[2]); return null;
    }
    function cardData() {
        console.info("进入");
        var form = $("#entryForm");
        if (paramArr.indexOf('姓名') >= 0) {
            if (form.find('input[name="name"]').val() == "") {
                alert("请输入姓名！");
                return false;
            }
        }
        if (paramArr.indexOf('身份证号') >= 0) {
            if (form.find('input[name="certno"]').val() == "") {
                alert("请输入身份证号！");
                return false;
            }
        }
        if (paramArr.indexOf('手机号') >= 0) {
            if (form.find('input[name="cell"]').val() == "") {
                alert("请输入手机号！");
                return false;
            }
        }
        if (paramArr.indexOf('学号') >= 0) {
            if (form.find('input[name="stuid"]').val() == "") {
                alert("请输入学号！");
                return false;
            }
        }
      
        //layer.msg("正在领取中...");

        console.info("提交");
        $.ajax({
            url: apiurl+'api/SchoolCodr/CheckSchoolUser?'+form.serialize(),
            dataType: 'json',
            type: 'get',
            success: function (data) {
                if (data.code == "10000") {
                    console.info("提交完毕");
		console.log(apiurl + 'api/SchoolCodr/GetAliauthorize?'+form.serialize());
                    window.location.href = apiurl + 'api/SchoolCodr/GetAliauthorize?'+form.serialize()+'&school_id=' + schoolCode + '&type=' + schooltype;

                }else if(data.code == "10001"){
                    alert("未找到学生信息!");
                    return;
				}
                console.log(data);
            }, error: function (res) {
                console.log(res.responseText);
            }
        });
    }
function getAliauthorize(form) {
    $.ajax({
        url: apiurl+'api/SchoolCodr/GetAliauthorize'+form.serialize(),
        dataType: 'json',
        type: 'get',
